#!/usr/bin/env bash

# update: catch-all update script for OS X and some Linux distros

system=$(uname)

if [[ "$system" = "Darwin" ]]; then
	if [[ `which brew` ]]; then
		brew update
		brew upgrade
		brew cleanup -s
	else
		echo "Homebrew not installed."
	fi
elif [[ "$system" = "Linux" ]]; then
	if [[ `which apt-get` ]]; then
		sudo apt-get update
		sudo apt-get upgrade
		sudo apt-get clean
	elif [[ `which pacman` ]]; then
		sudo pacman -Syyu
	else
		echo "Package manager unsupported."
	fi
fi

if [[ `which gem` ]]; then
	printf "Update Ruby gems? (Y/n): " && read ans
	if [[ "$ans" =~ "[Yy]" ]]; then
		sudo gem update
	fi
fi

if [[ `which cpan` ]]; then
	printf "Update CPAN modules? (Y/n): " && read ans
	if [[ "$ans" =~ "[Yy]" ]]; then
		sudo cpan -u
	fi
fi

if [[ `which npm` ]]; then
	printf "Update NPM packages? (Y/n): " && read ans
	if [[ "$ans" =~ "[Yy]" ]]; then
		npm update
	fi
fi
