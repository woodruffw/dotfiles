#!/usr/bin/env bash

# kbsecret-dmenu-pass: List all kbsecret logins in dmenu, take the
# selected one and feed the associated password into the clipboard.

if [[ "${1}" = "--help" ]]; then
	cat <<-EOS
		Usage:
		  kbsecret dmenu-pass
	EOS
	exit
fi

label=$(kbsecret list -t login | dmenu -p "kbsecret")

[[ -n "${label}" ]] && kbsecret pass -c "${label}"
