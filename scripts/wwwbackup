#!/usr/bin/env bash

# wwwbackup: back woodruffw.us files up to git repository

if [[ "$(hostname)" != "athena" ]] ; then
	echo "Wrong host, dummy."
	exit 1
fi

rm -rf ~/website/www/*
cp -r /usr/share/nginx/html/* ~/website/www/
pushd . > /dev/null
cd ~/website 
git add --all . > /dev/null
git commit -m "scripted commit at $(date)" > /dev/null
popd > /dev/null

exit 0
